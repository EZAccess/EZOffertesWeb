<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <div class="content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-sm-12">
                                    <EZAlert CssClass="alert-warning">
                                        Please <strong><a href="/identity/account/login">sign in</a></strong> to go to the requested page!
                                    </EZAlert>
                                </div>
                            </div>
                        </div>
                    </div>
                </NotAuthorized>
                <Authorizing>
                    <div class="content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-sm-12">
                                    <EZAlert CssClass="alert-light">Authorization in progress...</EZAlert>
                                </div>
                            </div>
                        </div>
                    </div>
                </Authorizing> 
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-12">
                                <EZAlert CssClass="alert-warning">Sorry, there's nothing at this address.</EZAlert>
                            </div>
                        </div>
                    </div>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

